<%= form_with(model: article, url: article_path, local: true) do |f| %>
 
  <%= render 'shared/error_messages', resource: article %>

  <!-- タイトル -->
  <%= f.label :title, class: "control-label" %>
  <%= f.text_field :title, class: "form-control" %>
  
  <!-- 内容 -->
  <%= f.label :content, class: "control-label" %>
  <%= f.text_area :content, class: "form-control" %>
  
  <!-- 画像 -->
  <%= f.label :image, class: "control-label" %><br/>
  <% if article.image? %>
    <%= image_tag(article.image.url(:thumb)) %><br/>
  <% end %>
  <%= f.file_field :image %><br/>
  <%= f.hidden_field :image_cache %>
  
  <div class="actions">
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-article-submit" %>    
  </div>  

<% end %>

<%= link_to "戻る", :back %>