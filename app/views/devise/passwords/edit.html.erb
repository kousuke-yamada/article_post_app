<h2><%= t(".change_my_password") %></h2>

<div class="row">
  <div class="w-50 mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :new_password %><br />
        <% if @minimum_password_length %>
          <em><%= t(".minimum_password", length: @minimum_password_length) %></em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :confirm_new_password %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".change_your_password"), class: "btn btn-primary btn-users-submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>